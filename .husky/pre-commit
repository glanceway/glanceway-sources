# Check if any files in dist/ are staged
if git diff --cached --name-only | grep -q "^dist/"; then
  echo "❌ Error: Do not commit files in dist/ directory."
  echo "   The dist/ directory is automatically generated by CI."
  exit 1
fi

# Check if README.md is staged
if git diff --cached --name-only | grep -q "^README.md$"; then
  echo "❌ Error: Do not commit README.md."
  echo "   README.md is automatically generated by CI."
  exit 1
fi

# Check if sources.json is staged
if git diff --cached --name-only | grep -q "^sources.json$"; then
  echo "❌ Error: Do not commit sources.json."
  echo "   sources.json is automatically generated by CI."
  exit 1
fi
